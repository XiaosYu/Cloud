@page "/login"
@layout LoginLayout

<style>
	body {
		background: url('/api/static/loadbackground');
		background-size: 100% auto;
	}

	#login-box {
		width: 425px;
		height: auto;
		margin: 0 auto;
		margin-top: 15%;
		margin-bottom:20%;
		text-align: center;
		background: #00000060;
		padding: 20px 50px;
		border: 1px solid #CCC;
		border-radius: 20px
	}

		#login-box h1 {
			color: #fff;
		}

		#login-box .form .item {
			margin-top: 15px;
		}


		#login-box button {
			margin-top: 20px;
			width: 190px;
			height: 30px;
			font-size: 20px;
			font-weight: 700;
			color: #fff;
			background-image: linear-gradient(to right, #74ebd5 0%, #9face6 100%);
			border: 0;
			border-radius: 15px;
		}
</style>
<body>
	<div id="login-box">
		<h1>登录</h1>
		<div class="form">
			<div class="item">
				<BootstrapInputGroup class="text-center">
					<BootstrapInputGroupLabel DisplayText="账号" />
					<BootstrapInput TValue="string" PlaceHolder="请输入账号(学号|手机号|QQ)"  IsAutoFocus="true" IsSelectAllTextOnFocus="true" />
				</BootstrapInputGroup>
			</div>
			<div class="item">
				<BootstrapInputGroup class="text-center">
					<BootstrapInputGroupLabel DisplayText="密码" />
					<BootstrapInput TValue="string" PlaceHolder="请输入密码(初始密码为123456)" IsAutoFocus="true" type="password" IsSelectAllTextOnFocus="true" />
				</BootstrapInputGroup>
			</div>
		</div>
		<button>登录</button>
	</div>
</body>
@code {
	[Inject]
	public UserData UserData{ get; set; }
}
