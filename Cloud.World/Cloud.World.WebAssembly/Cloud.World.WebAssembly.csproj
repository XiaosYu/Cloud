  <ItemGroup>
    <ProjectReference Include="..\Cloud.World.Shared\Cloud.World.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
  </ItemGroup>

</Project>
